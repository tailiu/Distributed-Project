doctype html
html(lang="en")
  head
    title Simple Forum
    style
        include ../style/homepage.css
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
  body
    #header
        h1 Simple Forum
    #logoutButton
        button(type="button", onclick="logout()")|logout(#{name})
    #nav
    #buttons
        button(type="button", id="newPost", onclick="newPost()")|New Post
        button(type="button", id="tags", onclick="renderTagfield()")|Tags
        button(type="button", onclick="renderGroupConfig()")|Group
    #mainSection
    script
        |username = !{name};
        |usermeta = !{usermeta};
        |page = !{page};
        |posts = !{posts};
        |groupName = !{groupName};
        |additionalInfo = !{additionalInfo};
        include ../script/homepage.js